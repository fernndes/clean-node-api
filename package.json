{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --silent --colors --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent  --noStackTrace",
    "test:ci": "jest --coverage  --silent --noStackTrace"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "standard": {
    "env": ["jest"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^7.0.4",
    "jest": "^27.4.6",
    "lint-staged": "^12.1.5",
    "standard": "^16.0.4"
  }
}
